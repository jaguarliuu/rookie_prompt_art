  <!-- 标题下分隔线 -->
  <line x1="60" y1="90" x2="420" y2="90" stroke="#333333" stroke-width="2"/>

  <!-- 日期 -->
  <text x="240" y="140" font-size="26" fill="#555555" font-family="serif" text-anchor="middle">{{datetime}}</text>

  <!-- 内容正文 -->
  <foreignObject x="40" y="170" width="400" height="520">
    <body xmlns="http://www.w3.org/1999/xhtml">
      <div style="font-family: serif; font-size: 22px; color: #333333; text-align: left; line-height:1.5; text-indent:2em;">
